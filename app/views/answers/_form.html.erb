<%= form_for(@answer, :html => {:multipart => true}) do |f| %>
    <% if @answer.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

            <ul>
                <% @answer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </div>
    <div class="field">
        <%= f.label :problem_id %><br>
        <%= number_field_tag :problem_number %>
    </div>

    <div class="field">
        <%= f.label :user_id %><br>
        <% if loggined %>
            <%= text_field_tag :user_name, cur_user_name %>
        <% else %>
            <%= text_field_tag :user_name %>
        <% end %>

    </div>
    <div class="field">
        <%= f.label :figure %><br>
        <%= f.file_field :figure %>
    </div>
    <br>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
